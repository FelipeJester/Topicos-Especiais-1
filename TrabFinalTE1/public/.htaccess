<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Redireciona todas as requisições que não são arquivos ou diretórios existentes
    # para o index.php
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.php/$1 [L]
</IfModule>
